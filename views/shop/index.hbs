{{!-- 구매 성공 시 성공 메시지 --}}
<div class="row">
    <br/>
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <div id="success" class="text-center alert alert-success" {{#if noMessage}}hidden{{/if}}>
            {{ successMsg }}
        </div>
    </div>
</div>
<br/>

{{!-- 초기 화면에 제품들 찍어주는 코드 --}}
{{# each products }}
<div class="row">
    {{# each this }}
        <div class="col-sm-6 col-md-4">
            <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{ this.imgPath }}" alt="product_im">
            <div class="card-body">
                <h5 class="card-title">{{ this.title }}</h5>
                <p class="card-text">{{ this.description }}</p>
                <div class="clearfix">
                    <div class="price pull-left"> &#65510;{{ this.price }}</div>
                    <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right">Add</a>
                </div>
            </div>
            </div>
        </div>
    {{/each}}
</div>
<br/>
{{/each}}