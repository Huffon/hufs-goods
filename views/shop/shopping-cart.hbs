{{!-- 쇼핑카트에 상품이 있으면 상품을 돌면서 상품 찍어줌 --}}
<br/>
{{# if products }}
<div class="jumbotron" style="width: 500pixel; margin:auto">
<div class="row">
    <div class="col-sm-10 col-md-12 com-md-offset-3 col-sm-offset-10">
        <ul class="list-group">
            {{# each products }}
             <li class="list-group-item">
                <strong>{{ this.item.title }}</strong>
                <div class="row pull-right">
                    <div class="col-sm-5 col-md-8 com-md-offset-5 col-sm-offset-5">
                        <a href="/reduce/{{this.item._id}}" type="button" class="btn btn-secondary btn-sm">감소</a>
                    </div>
                </div>
                <span class="badge badge-light pull-right">&#65510;{{ this.item.price }}  </span>
                <span class="badge badge-light pull-right">{{ this.qty }} x </span>
            </li>   
            {{/each}}
        </ul>
    </div>
</div>
<br/>
{{!-- 결제 버튼 및 총 금액 display --}}
<div class="row pull-right">
    <div class="col-sm-5 col-md-8 com-md-offset-5 col-sm-offset-5">
        <a href="/checkout" type="button" class="btn btn-success">결제</a>
    </div>
</div>
<div class="row pull-right">
    <div class="col-sm-6 col-md-6 com-md-offset-3 col-sm-offset-3">
        <strong>Total: &#65510;{{totalPrice}}</strong>
    </div>
</div>
</div>
{{!-- 쇼핑카트가 비어 있을 경우, 메시지 출력 --}}
{{ else }}
<div class="text-center">
        <h1 class="text-center">장바구니가 비었습니다.</strong></h1>
        <h2 class="text-center">쇼핑을 더 해보시는 건 어떠세요?</h2>
</div>
{{/if}}